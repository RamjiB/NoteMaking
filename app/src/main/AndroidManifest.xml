<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.notes">

    <application
        android:allowBackup="true"
        android:icon="@drawable/notes"
        android:label="Notes"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".notesEditor" />

        <!-- Register the TaskContentProvider -->
        <!-- Set name,authorities and exported attributes -->
        <!-- exported = false limits access to this ContentProvider to only this app -->
        <provider
            android:authorities="com.example.android.notes"
            android:name="com.example.android.notes.data.TaskContentProvider"
            android:exported="false" />

    </application>

</manifest>
